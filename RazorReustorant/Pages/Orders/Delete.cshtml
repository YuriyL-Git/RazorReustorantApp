@page
@model RazorReustorant.Pages.Orders.DeleteModel
@{
}

<h1>Delete</h1>
@if (Model.Order is null)
{
    <h4>The requested method was not found</h4>
}
else
{
    <div class="h4">
        Are You sure You want to delete @Model.Order.OrderDate?
    </div>

    <form method="post">
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <div class="form-group">
            <input type="submit" value="Delete Order"  class="btn btn-danger"/>
        </div>
    </form>
}